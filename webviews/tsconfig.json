{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react", // Use "react" for Preact compatibility
    "jsxFactory": "h", // Use `h` as the factory function for JSX
    "jsxFragmentFactory": "Fragment", // Preact's fragment support
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "types": ["preact", "./globals.d.ts"]
  },
  "include": ["./src/**/*"]
}
